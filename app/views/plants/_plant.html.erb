<div id="<%= dom_id plant %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">User:</strong>
    <%= plant.user_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Species:</strong>
    <%= plant.species %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= plant.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Watering interval days:</strong>
    <%= plant.watering_interval_days %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Last watered at:</strong>
    <%= plant.last_watered_at %>
  </div>
</div>
